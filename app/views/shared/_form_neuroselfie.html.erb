<form>
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="example@gmail.com">
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" id="name" placeholder="Jon Smith">
  </div>
  <div class="form-group">
    <label for="message">Your message</label>
    <input type="text" class="form-control" id="message" placeholder="Any additional information you would like to leave">
  </div>
  <div class="form-group form-check">
    <input type="checkbox" class="form-check-input" id="acceptTermConditions">
    <label class="form-check-label" for="acceptTermConditions">Agree to terms and conditions</label>
  </div>
</form>
